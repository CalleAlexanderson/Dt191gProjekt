@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h1>Ändra lösenord</h1>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="error-alert" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.OldPassword" class="account-inputs" autocomplete="current-password" aria-required="true" placeholder="Skriv ditt gamla lösenord." />
                <label asp-for="Input.OldPassword" class="visually-hidden"></label>
                <span asp-validation-for="Input.OldPassword" class="account-labels"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="account-inputs" autocomplete="new-password" aria-required="true" placeholder="Skriv ditt nya lösenord." />
                <label asp-for="Input.NewPassword" class="visually-hidden"></label>
                <span asp-validation-for="Input.NewPassword" class="account-labels"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="account-inputs" autocomplete="new-password" aria-required="true" placeholder="Upprepa det nya lösenordet."/>
                <label asp-for="Input.ConfirmPassword" class="visually-hidden"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="account-labels"></span>
            </div>
            <button type="submit" class="account-a-btn">Spara</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
