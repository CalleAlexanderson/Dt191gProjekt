@page
@model IndexModel
@{
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<h1>Profil</h1>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="account-labels" role="alert"></div>
            <div class="form-floating mb-3">
                <label asp-for="Username" class="account-labels">Nuvarande e-post:</label>
                <input asp-for="Username" class="account-inputs" placeholder="Please choose your username." disabled />
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="account-inputs"
                    placeholder="Please enter your phone number." />
                <label asp-for="Input.PhoneNumber" class="visually-hidden"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="account-a-btn">Save</button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
