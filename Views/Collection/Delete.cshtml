@model Backend.Models.Collection

@{
    ViewData["PageTitle"] = "Radera " + Model.Title;

    List<CollectionPost>? colPosts = ViewData["colPosts"] as List<CollectionPost>;
}

<div class="details-main-div">
    <h1>Är du säker på att du vill ta bort denna samling?</h1>
    <section class="your-collection-div">
        <a asp-action="Details" asp-route-id="@Model.Id">
            <article class="discover-post">
                <div class="discover-post-info">
                    <h3>@Model.Title</h3>
                </div>
            </article>
        </a>
    </section>

    <a asp-action="Index"><button class="return-button">← Tillbaka</button></a>
</div>

<div class="publish-div">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Radera" class="publish-button" />
    </form>
</div>
